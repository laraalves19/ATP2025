#TPC3
lista_numeros=[]
sair_do_menu=False
while not sair_do_menu:
    print ("Menu")
    print ("(1) Criar Lista\n (2) Ler Lista\n (3) Soma\n (4) Média\n (5) Maior\n (6) Menor\n (7) estaOrdenada por ordem crescente\n (8) estaOrdenada por ordem decrescente\n (9) Procura um elemento\n (0) Sair")
    opcao=input("Escolha uma opção: ")
    if opcao=="1":
        import random
        lista_aleatoria=[]
        lista_aleatoria= random.sample(range(1,101), 5)
        lista_numeros=lista_aleatoria
        print(f"Lista criada: ", lista_numeros)
     
    elif opcao=="2":
        N=int(input("Qantos números de 1 a 100 quer inserir?: "))
        if N>=1 and N<=100:
            lista_nova=[]
            for i in range(1,N+1):
                numero=int(input(f"Digite o {i}º número: "))
                lista_nova.append(numero)
            lista_numeros=lista_nova   
        else:
            print("Números inválidos!") 
        print("Lista criada: ", lista_numeros)
    
    elif opcao=="3":
        if lista_numeros:
            soma=0
            for num in lista_numeros:
                soma=soma+num
            print(f"A soma dos numeros é: {soma}")
        else:
            print("É preciso gerar uma lista priemeiro, faça o ponto 1 ou 2")
    
    elif opcao=="4":
        if lista_numeros:
            soma=0
            for num in lista_numeros:
                soma=soma+num
            elementos_lista=len(lista_numeros)
            media=soma/elementos_lista
            print (f"A média dos números é: {media}")
        else:
            print("É preciso gerar uma lista priemeiro, faça o ponto 1 ou 2")

    elif opcao=="5":
        if lista_numeros:
            maior=lista_numeros[0]
            for num in lista_numeros:
                if num>=maior:
                 maior=num
            print(f"O número maior é: {maior}")
        else:
            print("É preciso gerar uma lista priemeiro, faça o ponto 1 ou 2")

    elif opcao=="6":
        if lista_numeros:
            menor=lista_numeros[0]
            for num in lista_numeros:
                if num<=menor:
                 menor=num
            print(f"O número menor é: {menor}")
        else:
            print("É preciso gerar uma lista priemeiro, faça o ponto 1 ou 2")

    elif opcao=="7":
        if not lista_numeros:
            print("É preciso gerar uma lista priemeiro, faça o ponto 1 ou 2")
        else:
            esta_ordenada=True
            for i in range (len(lista_numeros)-1):
                if lista_numeros[i]>lista_numeros[i+1]:
                    esta_ordenada=False
            if esta_ordenada:
                print("Sim, a lista está ordenada por ordem crescente.")

            else:
                print("Não, a lista não esta ordenada ordem crescente.")

    
    elif opcao=="8":
        if not lista_numeros:
            print("É preciso gerar uma lista priemeiro, faça o ponto 1 ou 2")
        else:
            esta_ordenada=True
            for i in range (len(lista_numeros)-1):
                if lista_numeros[i]<lista_numeros[i+1]:
                    esta_ordenada=False
            if esta_ordenada:
                print("Sim, a lista está ordenada por ordem decrescente.")

            else:
                print("Não, a lista não esta ordenada ordem decrescente.")

    elif opcao=="9":
        if lista_numeros:
            elem=int(input("Qual número pretende procurar na lista?: "))
            indice_encontrado=-1
            for i in range(len(lista_numeros)):
                if lista_numeros[i] ==elem:
                    indice_encontrado=i
            if indice_encontrado!=-1:
                print(f"O número {elem} econtra-se na posição {indice_encontrado}")
            else:
                print(f"O número {elem} não se encontra na lista.")

    elif opcao=="0":
        print("Obrigado por utilizar o programa!")
        if lista_numeros:
            print(f"A lista atual guardada é: {lista_numeros}")
        else:
            print("Não há lista guardada!")
        sair_do_menu=True



    


            


